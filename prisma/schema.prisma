// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
}

model Product {
  id         Int       @id @default(autoincrement())
  name       String
  weight     Int
  serialCode String    @unique
  price      Float?
  stock      Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  qrRecord   QrRecord?
}

/// CMS-facing product data for the public products page
/// This is intentionally separated from the QR `Product` model above so that
/// marketing content (images, copywriting, pricing display) can evolve
/// independently from the verification inventory.
model CmsProduct {
  id             Int      @id @default(autoincrement())
  name           String
  weight         String
  price          Float?
  /// Array of image URLs or paths (e.g. `/images/50gr.jpeg`)
  images         Json?
  /// Filter category: all, award-winning, exclusives, large-bars, small-bars
  filterCategory String?  @default("all")
  /// Auto-filled fields for consistency
  rangeName      String?
  purity         String?
  category       String?
  description    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model QrRecord {
  id            Int          @id @default(autoincrement())
  productId     Int          @unique
  serialCode    String       @unique
  qrImageUrl    String
  scanCount     Int          @default(0)
  lastScannedAt DateTime?
  createdAt     DateTime     @default(now())
  product       Product      @relation(fields: [productId], references: [id])
  scanLogs      QRScanLog[]
}

model QRScanLog {
  id         Int       @id @default(autoincrement())
  qrRecordId Int
  scannedAt  DateTime  @default(now())
  ip         String?
  userAgent  String?
  location   String?
  qrRecord   QrRecord  @relation(fields: [qrRecordId], references: [id])
}
